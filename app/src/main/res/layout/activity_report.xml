<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.expensescalculator.Design.ReportActivity"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_tv_month"
            style="@style/incexp_title"
            android:text="Choose Month" />

        <Spinner
            android:id="@+id/report_sp_month"
            style="@style/incexp_value"
            >

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_tv_year"
            style="@style/incexp_title"
            android:text="Choose Year" />

        <Spinner
            android:id="@+id/report_sp_year"
            style="@style/incexp_value"
            android:entries="@array/reportyear">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_tv_type"
            style="@style/incexp_title"
            android:text="Choose Type" />

        <Spinner
            android:id="@+id/report_sp_type"
            style="@style/incexp_value"
            android:entries="@array/reporttype">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:text="PDF"
            android:textSize="30px"
            android:layout_gravity="bottom"/>


    </LinearLayout>

</LinearLayout>
