<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.expensescalculator.Design.ExpenseDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/incexp_title"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/expdetail_tv_date"
                        style="@style/regdetail_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/incexp_title"
                        android:text="Expense" />

                    <TextView
                        android:id="@+id/expdetail_tv_expense"
                        style="@style/regdetail_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/incexp_title"
                        android:text="Category" />

                    <TextView
                        android:id="@+id/expdetail_tv_category"
                        style="@style/regdetail_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/incexp_title"
                        android:text="Payee" />

                    <TextView
                        android:id="@+id/expdetail_tv_payee"
                        style="@style/regdetail_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/incexp_title"
                        android:text="Description"/>

                    <TextView
                        android:id="@+id/expdetail_tv_discription"
                        style="@style/regdetail_value"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
