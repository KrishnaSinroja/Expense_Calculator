<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.expensescalculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_expenses_calculator_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Design.HomeScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Design.AddIncomeActivity"
            android:label="@string/title_activity_add_income"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.HistoryActivity"
            android:label="@string/title_activity_history"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.ReportActivity"
            android:label="@string/title_activity_report"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.IncomeActivity"
            android:label="@string/title_activity_income"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.ExpenseDetails"
            android:label="@string/title_activity_expense_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.EditExpenseActivity"
            android:label="@string/title_activity_edit_expense"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.IncomeDetails"
            android:label="@string/title_activity_income_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Design.EditIncomeActivity"
            android:label="@string/title_activity_edit_income"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
